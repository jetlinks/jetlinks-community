        <easyorm.version>4.1.1-SNAPSHOT</easyorm.version>
        <jetlinks.version>1.2.1-SNAPSHOT</jetlinks.version>
        <reactor.excel.version>1.0.4</reactor.excel.version>
        <reactor.ql.version>1.0.16-SNAPSHOT</reactor.ql.version>

